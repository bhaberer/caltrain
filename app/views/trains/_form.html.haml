= form_for @train do |f|
  - if @train.errors.any?
    #error_explanation
      %h2= "#{pluralize(@train.errors.count, "error")} prohibited this train from being saved:"
      %ul
        - @train.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :number
    = f.number_field :number, class: 'form-control'
  .form-controls
    = f.submit 'Save', class: 'btn btn-default'
